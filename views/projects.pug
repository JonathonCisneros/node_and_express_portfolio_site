extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1.jp= project_name

        p.lead.text-light.op= description

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6.jp Technologies

        ul.op
          each tech in technologies
              li= tech
              
        a.button.expanded.op(href=`${live_link}`) Live Demo
        a.button.expanded.op(href=`${github_link}`) GitHub Repo
    
    each image in image_urls
        img.image.box-shadow(src=`${image}`)
